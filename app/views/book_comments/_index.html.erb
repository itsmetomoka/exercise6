<table>
	<% book.book_comments.each do |book_comment| %>
		<tr id = "comment_delete_<%= book_comment.id %>">
			<td class="comment">
				<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50") %><br>
				<div class ="colored">
					<%= link_to book_comment.user.name,user_path(book_comment.user.id) %>
				</div>
			</td>
			<td class="comment">
				<%= book_comment.comment %>
			</td>
			<% if book_comment.user == current_user %>
				<td>
					<%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: {remote: true}, class: "btn btn-danger btn-sm" %>
				</td>
			<% end %>
		</tr>
	<% end %>
</table>

