<h3>User info</h3>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
<table class="table">
  <tr><td>
  	<h5 class="profile-name">name</h5>
  </td><td>
  	<%= user.name %>
  </td></tr>
  <tr><td>
		<h5 class="profile-introduction">Introduction </h5>
	</td><td>
	  <%= user.introduction %>
	</td></tr>
	<tr><td>
		<h5>Follows</h5>
	</td><td>
		<div class = "colored">
			<%= link_to user.followings.count,following_user_path(user) %>
		</div>
	</td></tr>
	<tr><td>
		<h5>Followers</h5>
	</td><td>
		<div class ="colored">
			<%= link_to user.followers.count, followers_user_path(user) %>
		</div>
	</td></tr>
		<% if user == current_user %>
		<tr><td>
			<%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-wrench"></i></td></tr>
			<% end %>
		<% else %>
		<% if current_user.following? user %>
		  <tr><td>
				<%= link_to "フォロー解除",user_relationships_path(user.id), method: :delete, class:"btn btn-outline-secondary btn-block" %>
		  </td></tr>
		  <% else %>
		  <tr><td>
		  	<%= link_to "フォローする",user_relationships_path(user.id), method: :post, class:"btn btn-outline-primary btn-block" %>
		  </td></tr>
		  <% end %>
		<% end %>
</table>






